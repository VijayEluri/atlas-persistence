<beans
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans">

    <bean id="mongo" class="com.mongodb.Mongo">
        <constructor-arg value="${mongo.host}" type="java.lang.String" />
    </bean>
    
    <bean id="mongoDbBackedContentStore" class="org.uriplay.persistence.content.MongoDbBackedContentStore">
        <constructor-arg ref="mongo"/>
        <constructor-arg value="uriplay"/>
    </bean>
    
     <bean id="mongoDbBackedContentMentionStore" class="org.uriplay.persistence.tracking.MongoDBBackedContentMentionStore">
        <constructor-arg ref="mongo"/>
        <constructor-arg value="uriplay"/>
    </bean>
    
    <bean id="mongoDbBackedContentBootstrapper" class="org.uriplay.persistence.content.MongoDbBackedContentBootstrapper">
        <constructor-arg ref="mongoDbBackedContentStore" />
        <constructor-arg ref="AggregateContentListener"/>
    </bean>
</beans>